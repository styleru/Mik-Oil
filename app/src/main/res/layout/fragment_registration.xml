<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_registration"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/userName"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:cursorVisible="true"
            android:hint="@string/name"
            android:importantForAutofill="no"
            android:inputType="text"
            android:paddingStart="17dp"
            android:paddingTop="11dp"
            android:paddingEnd="17dp"
            android:paddingBottom="10dp"
            android:textColorHint="@color/colorHint"
            android:textCursorDrawable="@null"
            android:textSize="27sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintVertical_chainStyle="packed" />

        <EditText
            android:id="@+id/userPhoneNumber"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:background="@drawable/button"
            android:cursorVisible="true"
            android:hint="@string/phone_number"
            android:importantForAutofill="no"
            android:inputType="phone"
            android:paddingStart="17dp"
            android:paddingTop="11dp"
            android:paddingEnd="17dp"
            android:paddingBottom="10dp"
            android:textColorHint="@color/colorHint"
            android:textCursorDrawable="@null"
            android:textSize="27sp"
            app:layout_constraintStart_toStartOf="@+id/userName"
            app:layout_constraintTop_toBottomOf="@+id/userName" />

        <EditText
            android:id="@+id/userPassword"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:background="@drawable/button"
            android:cursorVisible="true"
            android:hint="@string/password"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:paddingStart="17dp"
            android:paddingTop="11dp"
            android:paddingEnd="17dp"
            android:paddingBottom="10dp"
            android:textColorHint="@color/colorHint"
            android:textCursorDrawable="@null"
            android:textSize="27sp"
            app:layout_constraintStart_toStartOf="@+id/userPhoneNumber"
            app:layout_constraintTop_toBottomOf="@+id/userPhoneNumber"
            app:layout_constraintVertical_chainStyle="packed" />

        <EditText
            android:id="@+id/userRepeatPassword"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:background="@drawable/button"
            android:cursorVisible="true"
            android:hint="@string/repeat_password"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:paddingStart="17dp"
            android:paddingTop="11dp"
            android:paddingEnd="17dp"
            android:paddingBottom="10dp"
            android:textColorHint="@color/colorHint"
            android:textCursorDrawable="@null"
            android:textSize="27sp"
            app:layout_constraintStart_toStartOf="@+id/userPassword"
            app:layout_constraintTop_toBottomOf="@+id/userPassword" />

        <Button
            android:id="@+id/goButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:elevation="7dp"
            android:stateListAnimator="@animator/animator_button"
            android:text="@string/go"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userRepeatPassword"
            app:layout_constraintVertical_bias="0.6"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/goButton"
            app:layout_constraintEnd_toEndOf="@+id/goButton"
            app:layout_constraintStart_toStartOf="@+id/goButton"
            app:layout_constraintTop_toTopOf="@+id/goButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>