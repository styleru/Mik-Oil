<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/login_edit_text"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:fontFamily="@font/mullerregular"
        android:hint="@string/login"
        android:layout_marginBottom="22dp"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLines="1"
        android:padding="10sp"
        android:textAllCaps="false"
        android:textColor="@color/colorBlack"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/pass_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginBottom="22dp" />

    <EditText
        android:id="@+id/pass_edit_text"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="276dp"
        android:layout_marginBottom="320dp"
        android:background="@drawable/button"
        android:fontFamily="@font/mullerregular"
        android:hint="@string/password"
        android:imeOptions="actionGo"
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="10dp"
        android:textAllCaps="false"
        android:textColor="@color/colorBlack"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:fontFamily="@font/mullerregular"
        android:padding="10dp"
        android:text="@string/reset"
        android:textAllCaps="false"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/pass_edit_text"
        app:layout_constraintTop_toBottomOf="@id/pass_edit_text"
        />

    <Button
        android:id="@+id/login_go_btn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="462dp"
        android:layout_marginBottom="148dp"
        android:background="@drawable/button_shadowed"
        android:fontFamily="@font/mullerregular"
        android:padding="10dp"
        android:text="@string/go"
        android:textColor="@color/colorBlack"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6"/>

    <ProgressBar
        android:id="@+id/login_progress_bar"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:indeterminate="false"
        android:progress="1"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/login_go_btn"
        app:layout_constraintEnd_toEndOf="@id/login_go_btn"
        app:layout_constraintStart_toStartOf="@id/login_go_btn"
        app:layout_constraintTop_toTopOf="@id/login_go_btn"/>


</androidx.constraintlayout.widget.ConstraintLayout>
