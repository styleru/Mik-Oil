<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditText
        android:id="@+id/android_2_1"
        android:layout_width="273dp"
        android:layout_height="48dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/android_2_2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp"
        android:hint="@string/android_2_1"
        android:textColorHint="#30000000"
        android:gravity="center"/>

    <EditText
        android:id="@+id/android_2_2"
        android:layout_width="271dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/android_2_1"
        android:layout_marginTop="22dp"
        android:hint="@string/android_2_2"
        android:textColorHint="#30000000"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/android_2_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/android_2_3"
        app:layout_constraintTop_toBottomOf="@id/android_2_2"
        app:layout_constraintRight_toRightOf="@id/android_2_2"

        android:selectAllOnFocus="false"
        android:linksClickable="false"
        android:autoLink="all"
        android:clickable="true"
        />
    <Button
        android:id="@+id/android_2_4"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_button"
        android:text="@string/android_2_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="86dp"/>

    <ProgressBar
        android:id="@+id/progressBar_2"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:indeterminate="true"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="86dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>