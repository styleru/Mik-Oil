<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/LoginEditText"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginTop="46dp"
        android:hint="@string/login_string"
        android:alpha="0.5"
        app:layout_constraintBottom_toTopOf="@+id/PasswordEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/PasswordEditText"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginTop="22dp"
        android:hint="@string/password_string"
        android:alpha="0.5"
        app:layout_constraintBottom_toTopOf="@+id/RecoveryLink"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/LoginEditText"
        app:layout_constraintVertical_chainStyle="packed" />


    <TextView
        android:id="@+id/RecoveryLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="@string/recovery_string"
        app:layout_constraintRight_toRightOf="@id/PasswordEditText"
        app:layout_constraintTop_toBottomOf="@id/PasswordEditText"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/GoButton"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginTop="22dp"
        android:text="@string/go_string"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />


</androidx.constraintlayout.widget.ConstraintLayout>