<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_fragment_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/recovery_code"
        style="@style/EditText"
        android:hint="@string/hint_sms_code"
        android:importantForAutofill="no"
        android:inputType="phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/recovery_sms_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="@string/recovery_sms_text"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/recovery_code"
        app:layout_constraintTop_toBottomOf="@id/recovery_code" />

    <Button
        android:id="@+id/recovery_sms_go"
        style="@style/GoButton"
        android:layout_marginTop="92dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recovery_sms_text"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/recovery_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/recovery_sms_go"
        app:layout_constraintEnd_toEndOf="@+id/recovery_sms_go"
        app:layout_constraintStart_toStartOf="@+id/recovery_sms_go"
        app:layout_constraintTop_toTopOf="@+id/recovery_sms_go" />

</androidx.constraintlayout.widget.ConstraintLayout>