<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_android_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/login"
        android:background="@drawable/button"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:hint="Логин/Телефон"
        android:inputType="text"
        android:textSize="18dp"
        android:maxLines="1"
        android:paddingLeft="8dp"
        android:layout_marginTop="146dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/password"
        android:background="@drawable/button"
        android:hint=" Пароль"
        android:inputType="text"
        android:textSize="18dp"
        android:maxLines="1"
        android:paddingLeft="8dp"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login" />

    <Button
        android:id="@+id/recovery"
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:layout_marginLeft="185dp"
        android:text="Восстановить"

        android:layout_marginTop="13dp"
        android:background="#0000"
        app:layout_constraintRight_toRightOf="@+id/password"
        app:layout_constraintTop_toBottomOf="@id/password" />

    <Button
        android:id="@+id/go"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:background="@drawable/button"
        android:layout_marginTop="153dp"
        android:textSize="20dp"
        android:text="GO"
        android:fontFamily="Muller"
        android:textFontWeight="500"
        android:lineHeight="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recovery" />

    <ProgressBar
        android:id="@+id/progress_circular"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@+id/go"
        app:layout_constraintBottom_toBottomOf="@+id/go"
        app:layout_constraintEnd_toEndOf="@+id/go"
        app:layout_constraintStart_toStartOf="@+id/go"/>

</androidx.constraintlayout.widget.ConstraintLayout>