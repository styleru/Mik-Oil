<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_code_recovery"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/code_recovery"
            style="@style/EditText"
            android:hint="@string/hint_code"
            android:importantForAutofill="no"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/code_recovery_text"
            android:layout_height="wrap_content"
            android:layout_width="280dp"
            android:layout_marginTop="27dp"
            android:text="@string/recovery_code_text"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/code_recovery"
            app:layout_constraintTop_toBottomOf="@id/code_recovery" />

        <Button
            android:id="@+id/code_recovery_go_button"
            style="@style/GoButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/code_recovery_text"
            app:layout_constraintVertical_bias="0.2"/>

        <ProgressBar
            android:id="@+id/code_recovery_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/code_recovery_go_button"
            app:layout_constraintEnd_toEndOf="@id/code_recovery_go_button"
            app:layout_constraintStart_toStartOf="@id/code_recovery_go_button"
            app:layout_constraintTop_toTopOf="@id/code_recovery_go_button"
            android:visibility="invisible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>